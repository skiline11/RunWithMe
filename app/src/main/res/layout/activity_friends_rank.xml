<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_friends_rank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.skiline11.pierwszaaplikacja.FriendsRank">

    <TextView
        android:text="Friends Rank"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="100m Run"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textView"
        android:id="@+id/button8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="800m Run"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textView"
        android:id="@+id/button9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="1500m Run"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_below="@+id/button8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button10" />

    <Button
        android:text="5000m Run"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:id="@+id/button11"
        android:layout_below="@+id/button9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="10 000m Run"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_below="@+id/button10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button12" />

    <Button
        android:text="Marathon"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_below="@+id/button11"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:id="@+id/button13" />

</RelativeLayout>
